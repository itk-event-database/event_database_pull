<section class="itk-event-database-event-list">
	{% if view %}
		<ol>
			{% if view.first %}
				<li><a href="{{ view.first }}">{{ 'First' | t }}</a></li>
			{% endif %}
			{% if view.previous %}
				<li><a href="{{ view.previous }}">{{ 'Previous' | t }}</a></li>
			{% endif %}
			{% if view.next %}
				<li><a href="{{ view.next }}">{{ 'Next' | t }}</a></li>
			{% endif %}
			{% if view.last %}
				<li><a href="{{ view.last }}">{{ 'Last' | t }}</a></li>
			{% endif %}
		</Ol>
	{% endif %}

	{% for event in events %}
		<article class="event">
			<a href="{{ path('event_database_pull.events_show', { id: event.itemId }) }}">
				<h1>{{ event.name }}</h1>

				<div class="description">{{ event.description }}</div>

				{% if event.occurrences %}
					<div class="occurrences">
						{% for occurrence in event.occurrences %}
							<div class="occurrence">
								<dl>
									<dt>{{ 'Start date' | t }}</dt>
									<dd>{{ occurrence.startDate | date('c') }}</dd>

									<dt>{{ 'End date' | t }}</dt>
									<dd>{{ occurrence.endDate ? occurrence.endDate | date('c') : 'â€“'}}</dd>

									{% if occurrence.place and occurrence.place.name %}
										<dt>{{ 'Place' | t }}</dt>
										<dd>{{ occurrence.place.name }}</dd>
									{% endif %}
								</dl>
							</div>
						{% endfor %}
					</div>
				{% endif %}
			</a>
		</article>
	{% endfor %}
</section>
